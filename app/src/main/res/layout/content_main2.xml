<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000"
    android:layout_width="match_parent"
    android:id="@+id/activity2"
    android:layout_height="match_parent"
    tools:context="proyecto2.app1.com.example.pc.c175.MainActivity">
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">


    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="140dp"
        android:layout_height="31dp"
        android:max="100"
        android:splitTrack="false"
        android:background="#212121"
        android:progress="1"
        android:rotation="270"
        android:progressDrawable="@drawable/progress_seekbar"
        android:thumb="@drawable/thumb_seekbar"
        android:layout_marginRight="485dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="140dp"
        android:layout_height="31dp"
        android:background="#212121"
        android:max="1960"
        android:splitTrack="false"
        android:rotation="270"
        android:progressDrawable="@drawable/progress_seekbar"
        android:thumb="@drawable/thumb_seekbar"
        android:progress="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp"
        android:layout_marginRight="361dp"
        app:layout_constraintRight_toRightOf="parent" />


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="99dp"
        android:layout_height="31dp"
        android:text="Link Together "
        android:textSize="10sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#212121"
        android:textColor="#FFC400"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="#212121"
        android:text="Key Switch"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#FFC400"
        android:layout_marginTop="57dp"
        android:gravity="center"
        android:layout_marginLeft="114dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="101dp"
        android:layout_height="22dp"
        android:text="MAIN CONTROL"
        android:textSize="12dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#FFC400"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="57dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="62dp"
        android:layout_height="29dp"
        android:text="THROTTLE POSITION [%]"
        android:textColor="#FFC400"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="375dp"
        android:layout_height="290dp"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="7dp"></FrameLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="61dp"
        android:layout_height="37dp"
        android:text="ENGINE VELOCITY [RPM]"
        android:textColor="#FFC400"
        android:textSize="10sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar3"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="59dp" />


</android.support.constraint.ConstraintLayout>
